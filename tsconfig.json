{
    "compilerOptions": {
        "outDir": "./app/static/js", // Output directory for compiled files
        "module": "ESNext",          // Module system to use
        "target": "ESNext",          // Target JavaScript version
        "esModuleInterop": true,     // Compatibility with CommonJS
        "moduleResolution": "node",   // Module resolution strategy
        // ... other options
    },
    "include": [
        "./src/**/*.ts"              // Input directory for TypeScript files
    ],
    "exclude": [
        "./index.ts",
        "node_modules",              // Exclude any unwanted directories
        "**/*.spec.ts"               // Exclude test files if you have any
    ]
}

